<h1>
    Socializer / <%= title %> 
</h1>

<section id="feed-posts">
    <h2>Posts</h2>

    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="60" rows="8" placeholder="Type here..." required></textarea>
        <br><br>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul type="none">
            
            <% for(post of posts){ %>
                <%- include('_post') %>
            <%}%>

        </ul>
    </div>
</section>