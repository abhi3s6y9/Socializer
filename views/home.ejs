<h1>
    Socializer / <%= title %> 
</h1>

<section id="feed-posts">
    <h2>Posts</h2>

    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="60" rows="8" placeholder="Type here..." required></textarea>
        <br><br>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul type="none">
            
            <% for(post of posts){ %>
                <li>
                    <h3>
                        <%= post.user.name %>
                    </h3>

                    <% if (locals.user && (locals.user.id == post.user.id)) { %>
                    <a href="/posts/destroy/<%= post.id %>">Delete</a>
                    <% } %>

                    <p>
                        <%= post.content %>
                    </p>

                    <!-- Comments to a Post -->
                    <div class="post-comments">
                        <% if(locals.user) {%>
                            <form action="/comments/create" method="POST">
                                <input type="text" name="content" placeholder="Type here to add comment..." required>
                                <!-- ID of the post to which the comment needs to be added -->
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <br>
                                <input type="submit" value="Add Comment">
                            </form>
                        <% } %>

                        <div class="post-comments-list">
                            <ul type="none" id="post-comments-<%= post._id%>">
                                <% for(comment of post.comments) { %>
                                    <li>
                                        <h4>
                                            <%= comment.user.name %>
                                        </h4>
                                        <p>
                                            <%= comment.content %>
                                        </p>
                                    </li>
                                <% } %>
                            </ul>
                        </div>

                    </div>
                </li>
            <%}%>

        </ul>
    </div>
</section>