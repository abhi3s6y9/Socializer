<h1>
    Socializer / <%= title %> 
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="40" rows="5" placeholder="Type here..."></textarea>
        <br><br>
        <input type="submit" value="Post">
    </form>

    <div id="posts-list-container">
        <ul type="none">
            <% for(post of posts){ %>
                <li>
                    <p>
                        <small>
                            <%= post.user.name %>
                        </small>
                        <%= post.content %>
                    </p>
                </li>
            <%}%>
        </ul>
    </div>
</section>